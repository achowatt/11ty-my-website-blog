                </div>
                <div class="download-container">
                    <a class="button">Download Resume</a>
                </div>
            </section>


            <section id="skills" class="u-margin-bottom-medium">
                <div class="content-container">
                    <div class="icon-container flex-item">
                        <div class="icon">
                            <i class="fab fa-github"></i>
                            <p>Github<p>
                        </div>
                        <div class="icon">
