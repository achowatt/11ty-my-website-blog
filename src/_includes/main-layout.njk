                            <p>Salesforce<p>
                        </div>
                        <div class="icon">
                        <i class="fab fa-sass"></i>
                            <p>SCSS<p>
                        </div>
                    </div>
                    <div class="header-right flex-item">
                        <h2>Skills &amp; Tech</h2>
                    </div>
                </div>
            </section>

            <section id="projects" class="u-margin-bottom-medium">
                <div class="header-left">
                    <h2>Projects</h2>
                </div>
                <div class="content-container">
                    <div class="project">
